                    },
                },
            },
            "package": {
                "description": "Stub for scuba client",
            },
        },
    },
    named_deps = {
        "fb_scuba": "//common/rust/scuba:scuba",
    },
    deps = [] + ([
        "//common/rust/shed/scuba_sample:scuba_sample",
        "//common/rust/shed/scuba_sample:scuba_sample_builder",
